<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".etelatesazmani">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/menupic" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imagee"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="0dp"
                android:layout_marginTop="00dp"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/personall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="00dp"

                android:textColor="@color/b10"
                android:textSize="20dp"
                app:fontFamily="@font/iran">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="right"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codemelli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/ic_baseline_person_outline_24"
                    android:text="کد ملی: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/codemellii"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shenasname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/ic_baseline_person_outline_24"
                    android:text="شماره شناسنامه: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/shenasnamee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mahalesodor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/ic_baseline_not_listed_location_24"
                    android:text="محل صدور: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/mahalesodorr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b10"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dadname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_group_24"
                    android:text="نام پدر: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/dadnamee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b10"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/saletavalode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_calendar_month_24"
                    android:text="تاریخ تولد: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/saletavalodee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/ic_baseline_add_ic_call_24"
                    android:text="تلفن ثابت: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/telll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_phone_android_24"
                    android:text="تلفن همراه: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/mobilee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout

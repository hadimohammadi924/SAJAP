                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_edit_location_alt_24"
                    android:text="آدرس: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:gravity="center"
                    android:id="@+id/addresss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:padding="10dp"
                    android:textColor="@color/b11"
                    android:textSize="15dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/b10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/madrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_menu_book_24"
                    android:text="مدرک تحصیلی: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/madrakk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reshtetahsili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_menu_book_24"
                    android:text="رشته تحصیلی: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/reshtetahsilii"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/b10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shomarehesab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_attach_money_24"
                    android:text="شماره حساب: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/shomarehesabb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shaba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_attach_money_24"
                    android:text="شماره شبا: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/shabaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/b10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shobe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"
                    android:drawableRight="@drawable/baseline_attach_money_24"
                    android:text="محل فعالیت: "
                    android:textColor="@color/b10"
                    android:textSize="20dp"
                    app:fontFamily="@font/iran"></TextView>

                <TextView
                    android:id="@+id/shobee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="00dp"

                    android:textColor="@color/b11"
                    android:textSize="23dp"
                    app:fontFamily="@font/iran"></TextView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/rooot"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_margin="5dp"

        app:cardBackgroundColor="#eee"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="right"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/CUser"
                android:gravity="left"
                android:textSize="12sp"
                android:textColor="@color/purple_700"
                android:text="توسط کاربر : meshki"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="شناسه شکایت"
                android:id="@+id/ticketsID"
                android:layout_marginTop="-15dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/titleTickets"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="عنوان شکایت "
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/categori"
                android:textColor="#000"
                android:textSize="14sp"
                android:text="حوزه و فوریت شکایت"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/datetime"

                android:textColor="#3C3C3C"
                android:textSize="12sp"
                android:text="نوع فوریت"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textDescription"
                android:layout_marginTop="10dp"
                android:textColor="#918E8E"
                android:text="متن کلی شکایت"
                android:layout_height="wrap_content"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="0dp"
                android:id="@+id/replyLayout"

                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/b8"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="پاسخ "
                        android:textColor="#aaa"
                        android:id="@+id/ticketsReplyTitle"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:textSize="10sp"

                        android:gravity="right"
                        android:padding="5dp"
                        android:id="@+id/responseuser"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="10sp"

                        android:gravity="right"
                        android:padding="5dp"
                        android:id="@+id/iiid"
                        android:layout_width="match_parent"
android:visibility="gone"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="10sp"


                        android:gravity="right"
                        android:padding="5dp"
                        android:id="@+id/rtime"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:padding="5dp"
                android:id="@+id/ticketsStatus"
                android:layout_width="match_parent"
                android:text="درحال بررسی"
                android:layout_height="wrap_content"/>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
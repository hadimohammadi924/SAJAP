<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".sabte_response">



        //total//

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //first//

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                //header//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="15dp"

                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/teal_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <TextView
                        android:id="@+id/rs_un"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="اطلاعات شکایات"
                        android:textAlignment="center"
                        android:textColor="@color/white"

                        android:textSize="35sp">


                    </TextView>

                </androidx.cardview.widget.CardView>
                //header//


                //نوع شکایت//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_gravity="center"

                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/b10"

                            android:layout_marginLeft="1dp"
                            android:padding="10dp"
                            android:text="زمان و تاریخ ثبت شکایت: "
                            android:textColor="@color/purple_700"></TextView>

                        <TextView
                            android:id="@+id/ctime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/b10"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="1401"
                            android:textSize="10sp"
                          ></TextView>

                        <TextView
                            android:id="@+id/cdate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/b10"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textSize="10sp"
                            android:text="1401"
                           ></TextView>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/rshcategori"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/b10"
                            android:gravity="center"
                            android:padding="10dp"></TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                //نوع شکایت//

                //متن اصلی شکایت//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_gravity="center"

                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/b10"

                            android:gravity="center"
                            android:padding="10dp"
                            android:text="حوزه شکایت و عنوان اصلی "
                            android:textColor="@color/purple_700"></TextView>
                        <TextView
                            android:id="@+id/rshtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="عنوان کلی شکایت "
android:textSize="12sp"
                            android:textAlignment="center"></TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                //متن اصلی شکایت//

                //متن کامل شکایت//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="15dp"

                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="متن کلی شکایت"
                            android:textAlignment="center"
                            android:textColor="@color/purple_700"
                            android:textSize="15sp"></TextView>

                        <TextView
                            android:id="@+id/rshdescrip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="متن کامل شکایت را کامل بنویسید"
                            android:textAlignment="center"
                            android:textSize="20sp"></TextView>
                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:hint="متن کامل شکایت را کامل بنویسید"
                            android:textAlignment="center"
                            android:textSize="20sp"></TextView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                //متن کامل شکایت//


                //نام ویزیتور و موزع//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="15dp"

                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/rshvisitor"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/b10"

                            android:padding="10dp"></TextView>

                        <TextView
                            android:id="@+id/rshtozi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/b10"

                            android:padding="10dp"></TextView>rshcode


                        <TextView
                            android:id="@+id/rshresponse"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="gone">


                        </TextView>






                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                //نام ویزیتور و موزع//


                //اطلاعات تماس گیرنده//

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="15dp"

                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rshcode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="نام تماس گیرنده"

                            android:textAlignment="center"></TextView>
                        <TextView
                            android:id="@+id/rshname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="نام تماس گیرنده"

                            android:textAlignment="center"></TextView>

                        <TextView
                            android:id="@+id/rshtell"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="تلفن تماس گیرنده"

                            android:textAlignment="center"></TextView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                //اطلاعات تماس گیرنده//


            </LinearLayout>
            //first//


            //ادرس//

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/b1"
                app:cardCornerRadius="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_700"
                      android:text="پاسخ"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/rtresponse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" جوابیه خود را تایپ کنید"

                        android:textAlignment="center"></EditText>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            //ادرس//

            //فوریت//

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_gravity="center"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rprirority"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/b10"
                        android:gravity="center"
                        android:padding="10dp"></TextView>
                    <TextView
                        android:id="@+id/zun"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/b10"
                        android:gravity="center"
                        android:padding="10dp"></TextView>
                    <TextView
                        android:id="@+id/zun2"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/b10"
                        android:gravity="center"
                        android:padding="10dp"></TextView>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            //فوریت//

            //Button CRUD

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="5dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/rupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="ثبت پاسخ" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            //Button CRUD

            <TextView
                android:id="@+id/rhh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>


        </LinearLayout>
        //total//




</RelativeLayout>